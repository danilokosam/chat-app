{
  "name": "chat-app-monorepo",
  "private": true,
  "description": "Monorepo for Chat App (Frontend & Backend)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue,bgMagenta\" \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}